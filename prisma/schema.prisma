generator zod {
  provider      = "zod-prisma"
  output        = "./zod"
  relationModel = "default"


  modelCase = "PascalCase"


  modelSuffix = "Model"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://kanban:kanban@cluster0.zrjw5.mongodb.net/kanban?retryWrites=true&w=majority"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  boards    Board[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Board {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  icon              String    @default("ðŸ“ƒ")
  title             String    @default("untitled")
  description       String    @default("Add description here You can add multiline description ðŸŸ¢ Let's start...")
  position          Int
  favourite         Boolean   @default(false)
  favouritePosition Int?
  sections          Section[]
  user              User      @relation(fields: [userId], references: [id])
  userId            String    @db.ObjectId
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Section {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  title     String   @default("")
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String   @default("")
  content   String   @default("")
  position  Int
  section   Section  @relation(fields: [sectionId], references: [id])
  sectionId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
